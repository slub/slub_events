# iCal export
printCal = PAGE
printCal {
    typeNum = 1469051993
    10 =< tt_content.list.20.slubevents_eventlist
	10 {
		switchableControllerActions {
			Event {
				1 = printCal
			  }
			}
		}

	config {
		disableAllHeaderCode = 1
        additionalHeaders {
			10 {
				header = Content-type:text/calendar; charset=utf-8;
			}
			20 {
				header = Content-Disposition: inline; filename="slubevent.ics"
			}
		}
		xhtml_cleaning = 0
		admPanel = 0
	}
}

